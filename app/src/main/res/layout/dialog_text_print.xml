<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/bg_dialog"
    android:padding="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCloseTextPrint"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvTitleTextPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUSTOM PRINT BILL"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imgLogoPrint"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo_ii"
            app:layout_constraintTop_toBottomOf="@id/tvTitleTextPrint"/>

        <EditText
            android:id="@+id/etHeader1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="header 1"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="32"
            android:singleLine="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/imgLogoPrint"/>

        <EditText
            android:id="@+id/etHeader2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="header 2"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="32"
            android:singleLine="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/etHeader1"/>

        <EditText
            android:id="@+id/etHeader3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="header 3"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="32"
            android:singleLine="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/etHeader2"/>

        <EditText
            android:id="@+id/etHeader4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="header 4"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="32"
            android:singleLine="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/etHeader3"/>

        <EditText
            android:id="@+id/etHeader5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="header 5"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="32"
            android:singleLine="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/etHeader4"/>

        <EditText
            android:id="@+id/etFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="footer 1"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="32"
            android:singleLine="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/etHeader5"/>

        <EditText
            android:id="@+id/etFooter2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="footer 2"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="32"
            android:singleLine="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/etFooter"/>

        <EditText
            android:id="@+id/etFooter3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="footer 3"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="32"
            android:singleLine="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/etFooter2"/>

        <EditText
            android:id="@+id/etFooter4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="footer 4"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="32"
            android:singleLine="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/etFooter3"/>

        <EditText
            android:id="@+id/etFooter5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="footer 5"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:background="@color/white"
            android:maxLength="32"
            android:singleLine="true"
            android:padding="5dp"
            app:layout_constraintTop_toBottomOf="@id/etFooter4"/>

        <Button
            android:id="@+id/btnSaveTextPrint"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="SAVE"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/etFooter5"/>

        <Button
            android:id="@+id/btnPrintTextPrint"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="PRINT"
            app:layout_constraintTop_toBottomOf="@id/btnSaveTextPrint"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>