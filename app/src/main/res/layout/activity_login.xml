<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fiery_red_trans_90"
    tools:context=".ui.activity.LoginActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:padding="70dp"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/welcome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll"/>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="L O G I N"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Silahkan masukan pin kamu"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:padding="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/garis_tepi"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/et2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_marginStart="2dp"
                android:background="@drawable/garis_tepi"
                android:layout_marginEnd="2dp"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/et3"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_marginStart="2dp"
                android:background="@drawable/garis_tepi"
                android:layout_marginEnd="2dp"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/et4"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/garis_tepi"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/et5"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/garis_tepi"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"/>

            <EditText
                android:id="@+id/et6"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:textSize="17sp"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_marginStart="2dp"
                android:background="@drawable/garis_tepi"
                android:layout_marginEnd="2dp"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="error"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/holo_red_dark"
            android:textAlignment="center"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLogin"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center">

        <ProgressBar
            android:id="@+id/progressUser"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rlLogIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/btnLogIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bg_button"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L O G I N"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvLogoutLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintTop_toBottomOf="@id/llLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>