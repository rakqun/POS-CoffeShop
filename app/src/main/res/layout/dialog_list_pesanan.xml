<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clPesanan"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_dialog"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvTitleDialogPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P E S A N A N"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvPaxTextDialogPesanan"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="PAX"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnPrintPesanan"
        app:layout_constraintEnd_toStartOf="@id/tvTitleDialogPesanan"/>

    <EditText
        android:id="@+id/etPaxDialogPesanan"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="0"
        android:textColor="@color/black"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textAlignment="center"
        android:inputType="number"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/btnPrintPesanan"
        app:layout_constraintTop_toBottomOf="@id/tvPaxTextDialogPesanan"
        app:layout_constraintEnd_toStartOf="@id/tvTitleDialogPesanan"/>

    <ImageView
        android:id="@+id/btnCloseDialogPesanan"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btnPrintPesanan"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:visibility="gone"
        android:src="@drawable/baseline_local_printshop_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RelativeLayout
        android:id="@+id/rlMeja"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleDialogPesanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvMejaDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MEJA"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/etCustomeperDialogPesanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Customer"
        android:textColor="@color/black"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/rlMeja"/>

    <LinearLayout
        android:id="@+id/llTopDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/etCustomeperDialogPesanan">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text=""
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="MENU"
            android:textSize="16sp"
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/btnRemoveProduc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Qty"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/btnAddProduc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TOTAL"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMenuPesanan"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/list_menu_pesanan"
        app:layout_constraintTop_toBottomOf="@id/llTopDialog"/>

    <TextView
        android:id="@+id/tvTaxDialogPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tax :"
        android:textSize="16sp"
        android:textAlignment="textEnd"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/rvMenuPesanan"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvChgDialogPesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Chg :"
        android:textSize="16sp"
        android:textAlignment="textEnd"
        android:visibility="gone"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/tvTaxDialogPesanan"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/llMidDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvChgDialogPesanan">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text=""
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="TOTAL"
            android:textSize="16sp"
            android:layout_marginEnd="10dp"
            android:textColor="@android:color/black"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>

        <TextView
            android:id="@+id/tvQuantyBawah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Qty"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/fiery_red"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"/>

        <TextView
            android:id="@+id/tvTotalBawah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TOTAL"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_marginEnd="10dp"
            android:textColor="@color/fiery_red"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/btnVoidListPesanan"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/bg_button"
        app:layout_constraintStart_toEndOf="@id/btnSplitMerge"
        app:layout_constraintTop_toBottomOf="@id/llMidDialog"
        app:layout_constraintEnd_toStartOf="@id/btnInput">

        <TextView
            android:id="@+id/tvBtnVoidListPesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CLEAR"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnInput"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_button"
        app:layout_constraintStart_toEndOf="@id/btnVoidListPesanan"
        app:layout_constraintTop_toBottomOf="@id/llMidDialog"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvBtnOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ORDER"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnAddItems"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:background="@drawable/bg_button"
        app:layout_constraintTop_toBottomOf="@id/llMidDialog"
        app:layout_constraintEnd_toStartOf="@id/btnSplitMerge"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tvBtnAddItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD ORDER"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnSplitMerge"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:background="@drawable/bg_button"
        app:layout_constraintEnd_toStartOf="@id/btnVoidListPesanan"
        app:layout_constraintTop_toBottomOf="@id/llMidDialog"
        app:layout_constraintStart_toEndOf="@id/btnAddItems">

        <TextView
            android:id="@+id/tvBtnSplitMerge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPLIT/MERGE"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_margin="1dp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>