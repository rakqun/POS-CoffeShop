<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fiery_red_trans_90"
    tools:context=".ui.fragment.SettingFragment">

    <TextView
        android:id="@+id/tvTitleSeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="K O N F I G U R A S I"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvPromoCodeSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Promo Code"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSeting"/>

    <ImageView
        android:id="@+id/imgPromoCodeSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitleSeting"/>

    <TextView
        android:id="@+id/tvPaymentMethodSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvPromoCodeSetting"/>

    <ImageView
        android:id="@+id/imgArrowPaymentSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintTop_toBottomOf="@id/imgPromoCodeSetting"/>

    <TextView
        android:id="@+id/tvCustomPrintBillSetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom Print Bill"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentMethodSetting"/>

    <ImageView
        android:id="@+id/imgCustomPrintBillSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_forward_ios_24"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="23dp"
        app:layout_constraintTop_toBottomOf="@id/imgArrowPaymentSetting"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/stShowTax"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Show Tax"
        android:checked="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:trackTint="@color/switch_track_seelctor"
        app:thumbTint="@color/switch_thumb_selector"
        app:layout_constraintTop_toBottomOf="@id/tvCustomPrintBillSetting"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/stShowChg"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Show Service Chg"
        android:checked="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:trackTint="@color/switch_track_seelctor"
        app:thumbTint="@color/switch_thumb_selector"
        app:layout_constraintTop_toBottomOf="@id/stShowTax"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvTextTax"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tax"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/stShowChg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvTextChg"/>

    <TextView
        android:id="@+id/tvTextChg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Service Chg"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/stShowChg"
        app:layout_constraintStart_toEndOf="@id/tvTextTax"
        app:layout_constraintEnd_toStartOf="@id/btnSimpanSetting"/>

    <EditText
        android:id="@+id/etTaxSetting"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="Tax"
        android:layout_marginStart="15dp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:textAlignment="center"
        android:inputType="number"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintTop_toBottomOf="@id/tvTextTax"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etChgSetting"/>

    <EditText
        android:id="@+id/etChgSetting"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:hint="Service Chg"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:textAlignment="center"
        android:inputType="number"
        android:background="@android:drawable/editbox_background"
        app:layout_constraintTop_toBottomOf="@id/tvTextChg"
        app:layout_constraintEnd_toStartOf="@id/btnSimpanSetting"
        app:layout_constraintStart_toEndOf="@id/etTaxSetting"/>

    <Button
        android:id="@+id/btnSimpanSetting"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Save"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvTextChg"
        app:layout_constraintStart_toEndOf="@id/etChgSetting"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/stBluetoothOnOffSetting"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Print Taking Order"
        android:checked="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:trackTint="@color/switch_track_seelctor"
        app:thumbTint="@color/switch_thumb_selector"
        app:layout_constraintTop_toBottomOf="@id/etTaxSetting"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvBluetoothSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Printer"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/stBluetoothOnOffSetting"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvSelectBluetoothSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/stBluetoothOnOffSetting"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnPrint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Print"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvBluetoothSetting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>