<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/bg_dialog"
    android:padding="5dp">

    <TextView
        android:id="@+id/tvTitleDialogSales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT BILL"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/btnCloseDialogSales"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListSalesBill"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        tools:listitem="@layout/list_menu_sales"
        app:layout_constraintTop_toBottomOf="@id/tvTitleDialogSales"
        app:layout_constraintBottom_toTopOf="@id/btnNewBill"/>

    <Button
        android:id="@+id/btnNewBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEW BILL"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>